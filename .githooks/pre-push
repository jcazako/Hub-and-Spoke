#!/bin/bash
set -e

echo "ğŸ‘‰ Running Terraform pre-push checks..."

# Initialize backend (safe if already done)
terraform init -backend=false -input=false -upgrade
if [ $? -ne 0 ]; then
  echo "âŒ Terraform init failed."
  exit 1
fi
# Show plan to ensure no surprises
terraform plan -input=false -lock=false -detailed-exitcode
status=$?

if [ $status -eq 1 ]; then
  echo "âŒ Terraform plan failed."
  exit 1
elif [ $status -eq 2 ]; then
  echo "âš ï¸  Terraform plan found changes. Review before pushing."
  exit 1
fi

echo "âœ… Pre-push checks passed (no changes detected)."
