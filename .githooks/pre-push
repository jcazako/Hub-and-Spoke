#!/usr/bin/env bash
set -euo pipefail

echo "👉 Running Tofu pre-push checks..."

# init (optional explicit handling just for nicer message)
if tofu init -backend=false -input=false -upgrade; then
  :
else
  echo "❌ Tofu init failed."
  exit 1
fi

# Check formatting
tofu fmt -check -recursive
if [ $? -ne 0 ]; then
  echo "❌ Tofu files not formatted. Run 'tofu fmt -recursive'."
  exit 1
else
  echo "✅ Tofu files formatted."
fi

# Validate configs
tofu validate
if [ $? -ne 0 ]; then
  echo "❌ Tofu validation failed."
  exit 1
else
  echo "✅ Tofu validation passed."
fi

tofu test
if [ $? -ne 0 ]; then
  echo "❌ Tofu tests failed."
  exit 1
else
  echo "✅ Tofu tests passed."
fi

# plan with detailed exit codes
if tofu plan -input=false -lock=false -detailed-exitcode; then
  status=0
else
  status=$?   # will be 1 (error) or 2 (changes)
fi

case "$status" in
  0)
    echo "✅ Pre-push checks passed (no changes detected)."
    ;;
  1)
    echo "❌ Tofu plan failed."
    exit 1
    ;;
  2)
    echo "⚠️  Tofu plan found changes. Pushing anyway."
    ;;
esac
