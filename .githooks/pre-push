#!/usr/bin/env bash
set -euo pipefail

echo "👉 Running Terraform pre-push checks..."

# init (optional explicit handling just for nicer message)
if terraform init -backend=false -input=false -upgrade; then
  :
else
  echo "❌ Terraform init failed."
  exit 1
fi

# plan with detailed exit codes
if terraform plan -input=false -lock=false -detailed-exitcode; then
  status=0
else
  status=$?   # will be 1 (error) or 2 (changes)
fi

case "$status" in
  0)
    echo "✅ Pre-push checks passed (no changes detected)."
    ;;
  1)
    echo "❌ Terraform plan failed."
    exit 1
    ;;
  2)
    echo "⚠️  Terraform plan found changes. Pushing anyway."
    ;;
esac
